<script>document.addEventListener('DOMContentLoaded', () => {
  const heroTitle = document.querySelector('.hero-title');
  let xRot = 0;
  let yRot = 0;

  function updateFontVariation() {
    xRot = (xRot + 1) % 360;
    yRot = (yRot + 1) % 360;
    heroTitle.style.fontVariationSettings = `"XROT" ${xRot}, "YROT" ${yRot}`;
    requestAnimationFrame(updateFontVariation);
  }

  updateFontVariation();
}); </script>
